	// TODO Highlight – Highlights `TODO`, `FIXME` and other annotations within the code.
	// https://marketplace.visualstudio.com/items?itemName=wayou.vscode-todo-highlight

	"todohighlight.keywords": [
		{
			"text": "__commentme__",
			"color": "white",
			"backgroundColor": "rgba(0,0,0,.1)",
		},
		{
			"text": "TODO:",
			"color": "#f44336",
			// "border": "1px solid red",
			// "borderRadius": "2px",
			"border": "1px solid transparent",
			"backgroundColor": "rgba(0,0,0,0)",
		},
		{
			"text": "FIXME:",
			"color": "#9c88ff",
			"backgroundColor": "rgba(0,0,0,0)",
		},
		{
			"text": "NOTE:",
			"color": "#ff9f43", // "#ffb301"
			"backgroundColor": "rgba(0,0,0,0)",
		},
		{
			"text": "READ:",
			"color": "#1dd1a1",
			"backgroundColor": "rgba(0,0,0,0)",
		},
		{
			"text": "USE:",
			"color": "#0097e6",
			"backgroundColor": "rgba(0,0,0,0)",
		},
		{
			"text": "REVIEW:",
			"color": "#64dd17",
			"backgroundColor": "rgba(0,0,0,0)",
		},        
		{
			"text": "STUB:",
			"color": "#3ea6f7",
			"backgroundColor": "rgba(0,0,0,0)",
		},
		{
			"text": "SEE:",
			"color": "#9c88ff",
			"backgroundColor": "rgba(0,0,0,0)",
		},
	],

	// Comment Anchors – Place anchor tags within comments for easy file & workspace navigation.
	// https://marketplace.visualstudio.com/items?itemName=ExodiusStudios.comment-anchors

	"commentAnchors.tags.list": [
		{
			"tag": "ANCHOR",
			"iconColor": "default",
			"highlightColor": "#A8C023",
			"isItalic": false,
			"scope": "file"
		},
		{
			"tag": "TODO",
			"iconColor": "blue",
			"highlightColor": "#f44336",
			"isItalic": false,
			"scope": "workspace",
		},
		{
			"tag": "FIXME",
			"iconColor": "red",
			"highlightColor": "#9c88ff",
			"isItalic": false,
			"scope": "workspace"
		},
		{
			"tag": "STUB",
			"iconColor": "purple",
			"highlightColor": "#BA68C8",
			"isItalic": false,
			"scope": "file"
		},
		{
			"tag": "NOTE",
			"iconColor": "orange",
			"highlightColor": "#ff9f43",
			"isItalic": false,
			"scope": "file"
		},
		{
			"tag": "REVIEW",
			"iconColor": "green",
			"highlightColor": "#64DD17",
			"isItalic": false,
			"scope": "workspace"
		},
		{
			"tag": "SECTION",
			"iconColor": "blurple",
			"highlightColor": "#896afc",
			"isItalic": false,
			"scope": "workspace",
			"isRegion": true
		}
	],

	// "commentAnchors.tagHighlights.enabled": false,

	// Better Comments – Improve your code commenting by annotating with alert, informational, TODOs, and more!
	// https://marketplace.visualstudio.com/items?itemName=aaron-bond.better-comments

	"better-comments.multilineComments": true,
	"better-comments.highlightPlainText": true,

	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#eb3b5a",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "?",
			"color": "#3498DB",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		{
			"tag": "//",
			"color": "#4b6584",
			"strikethrough": false,
			"backgroundColor": "transparent"
		},
		/*
		{
			"tag": "TODO",
			"color": "#eb3b5a",
