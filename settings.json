	"editor.renderWhitespace": "none", // "selection", "trailing"
	
	"editor.fontSize": 12,
	"editor.dragAndDrop": true,
	"editor.tabSize": 4,
	"editor.insertSpaces": false, // I prefer tabs

	"editor.fontFamily": "'Hasklig', 'Source Code Pro', 'Fira Code', 'Cascadia Code', Consolas, Menlo, 'SF Mono', 'Monaco', 'Andale Mono', 'Lucida Console', 'Bitstream Vera Sans Mono', monospace",
	"editor.fontLigatures": true,

	"editor.detectIndentation": true,
	// "editor.insertSpaces": false,

	// "editor.scrollbar.verticalScrollbarSize": 5,
	// "editor.rulers": [ 80 ]

	// Controls if quick suggestions should show up while typing
	"editor.quickSuggestions": true,

	// Controls if suggestions should be accepted with "Enter" - in addition to "Tab". Helps to avoid ambiguity between inserting new lines and accepting suggestions.
	"editor.acceptSuggestionOnEnter": "smart",

	// Controls the delay in ms after which quick suggestions will show up.
	"editor.quickSuggestionsDelay": 10,

	// Enable word based suggestions
	"editor.wordBasedSuggestions": false,

	// "editor.autoClosingBrackets": "languageDefined",
	"editor.autoClosingBrackets": "beforeWhitespace",
	"editor.suggestOnTriggerCharacters": true,

	"editor.accessibilitySupport": "off",

	"workbench.startupEditor": "none", // "newUntitledFile",
	
	// "editor.occurrencesHighlight": false,
	// "editor.selectionHighlight": false,
	"editor.multiCursorModifier": "ctrlCmd", // "alt"

	"editor.lightbulb.enabled": true, // mapped to Alt + Enter (formerly Ctrl + .)

	"window.zoomLevel": 0,

	// --------------------------------------------------------------------------------
	
